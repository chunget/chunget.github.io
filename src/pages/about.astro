const locations = [
  {
    title: '宜蘭總部',
    address: '宜蘭市大坡路一段25號2樓之1',
    phone: '+886972-599-076',
    email: 'hoooimage@gmail.com',
    mapUrl: 'https://goo.gl/maps/your-map-url-here'
  }
];

const milestones = [
  { year: '2010', title: '創立初期', description: '好圈圈形象學苑成立，開始提供個人形象諮詢服務。' },
  { year: '2012', title: '服務擴展', description: '擴展服務範圍，開始提供企業形象培訓課程。' },
  { year: '2015', title: '品牌升級', description: '品牌全面升級，成為「好圈圈好感形象學苑」，擴大服務範圍。' },
  { year: '2018', title: '國際認證', description: '獲得國際形象顧問協會認證，提升專業服務水準。' },
  { year: '2020', title: '線上服務', description: '推出線上形象諮詢服務，突破地域限制。' },
  { year: '2023', title: '持續成長', description: '服務客戶突破1000家，成為台灣領先的形象管理顧問公司。' }
];

const timeline = [
  { year: '2018', title: '創立', description: '創辦人何圈圈成立好圈圈好感形象學苑，致力於幫助職場人士建立專業形象。' },
  { year: '2020', title: '擴張', description: '推出企業形象培訓服務，開始為企業提供專業形象管理解決方案。' },
  { year: '2022', title: '創新', description: '開發線上形象診斷工具，提供更便捷的專業形象諮詢服務。' },
  { year: '2023', title: '持續成長', description: '服務客戶突破1000家，成為台灣領先的形象管理顧問公司。' },
  { year: '2024', title: '國際拓展', description: '成功進軍東南亞市場，為更多地區的客戶提供專業形象管理服務。' },
  { year: '2025', title: '科技整合', description: '推出AI形象診斷系統，結合最新科技提供更精準的個人化形象建議。' }
];
---

<Layout title="關於我們 - 好圈圈好感形象學苑">
  <section class="bg-gradient-to-br from-primary-600 via-primary-500 to-secondary-500 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-4 sm:mb-6">關於我們</h1>
      <p class="text-sm sm:text-lg max-w-3xl mx-auto leading-relaxed">
        好圈圈好感形象學苑致力於幫助職場人士建立專業形象，提升個人魅力
      </p>
    </div>
  </section>

  <!-- 我們的故事 -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-2xl sm:text-3xl font-bold mb-4 sm:mb-6 text-gray-800">我們的故事</h2>
          <p class="text-gray-600 mb-4">
            好圈圈好感形象學苑源於創辦人何圈圈對形象管理的熱情與專業。在多年的時尚產業工作經驗中，她發現許多專業人士雖然在自己的領域非常出色，但往往忽略了個人形象對職業發展的重要性。
          </p>
          <p class="text-gray-600 mb-4">
            帶著「讓每個人都能展現最佳形象」的使命，好圈圈形象學苑開始提供個人形象諮詢服務，幫助職場人士建立符合自身特質的專業形象。隨著服務範圍的擴大，我們逐漸發展出一套完整的形象管理系統，涵蓋個人色彩分析、穿搭指導、儀態培訓等多元服務。
          </p>
          <p class="text-gray-600 mb-4">
            如今，好圈圈好感形象學苑已成為台灣領先的形象管理顧問公司，服務對象包括各行各業的專業人士、企業主與企業團隊。我們相信，良好的形象不僅能提升個人自信，更能為職業發展創造更多機會。
          </p>
        </div>
        <div class="relative">
          <div class="rounded-lg overflow-hidden shadow-lg">
            <img 
              src="/images/about/mystory_optimized.png" 
              alt="好圈圈好感形象學苑的故事"
              width="600" height="400"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="absolute -bottom-6 -right-6 w-48 h-48 bg-pink-100 rounded-lg -z-10"></div>
          <div class="absolute -top-6 -left-6 w-48 h-48 bg-purple-100 rounded-lg -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- 我們的價值 -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">我們的價值</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-center w-12 h-12 bg-pink-100 rounded-full mb-4">
            <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-xl font-medium mb-2 text-gray-800">專業服務</h3>
          <p class="text-gray-600">我們的團隊由資深形象顧問組成，提供專業的色彩分析和形象塑造服務。</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-center w-12 h-12 bg-pink-100 rounded-full mb-4">
            <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-medium mb-2 text-gray-800">量身打造</h3>
          <p class="text-gray-600">根據每位客戶的特質和需求，提供客製化的形象管理方案。</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <div class="flex items-center justify-center w-12 h-12 bg-pink-100 rounded-full mb-4">
            <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-xl font-medium mb-2 text-gray-800">持續成長</h3>
          <p class="text-gray-600">我們不斷學習和進步，為客戶提供最新的形象管理知識和技術。</p>
        </div>
      </div>
    </div>
  </section>

  <!-- 我們的團隊 -->
  <section class="py-16 bg-gradient-to-b from-white to-pink-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4 text-center text-gray-800">專業團隊</h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">以專業、用心的態度，為每位客戶打造專屬的形象風格</p>
      <div class="max-w-5xl mx-auto">
        {teamMembers.map(member => (
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden mb-12">
            <div class="flex flex-col md:flex-row">
              <div class="md:w-1/3 relative">
                <div class="relative h-full">
                  <img 
                    src="/images/about/hooo.png" 
                    alt="何清荃 (圈圈) - 好感形象教練"
                    class="w-full h-full object-cover"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                </div>
                <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-pink-100 rounded-full -z-10 opacity-50"></div>
                <div class="absolute -top-4 -left-4 w-24 h-24 bg-purple-100 rounded-full -z-10 opacity-50"></div>
              </div>
              <div class="md:w-2/3 p-6 md:p-8">
                <div class="flex items-center mb-4">
                  <div>
                    <h3 class="text-2xl font-bold text-gray-800">{member.name}</h3>
                    <p class="text-pink-600 font-medium">{member.title}</p>
                  </div>
                </div>
                <p class="text-gray-600 mb-6 leading-relaxed">{member.bio}</p>
                <div class="grid md:grid-cols-2 gap-6">
                  <div class="bg-gray-50 rounded-xl p-4">
                    <h4 class="font-semibold text-gray-800 mb-2 flex items-center">
                      <span class="w-1 h-4 bg-pink-500 rounded-full mr-2"></span>
                      專業資格
                    </h4>
                    <div class="text-gray-600 space-y-1 text-sm">
                      {member.certifications.split('\n').filter(line => line.trim()).map(line => (
                        <p class="flex items-start">
                          <span class="mr-2">•</span>
                          <span>{line.trim()}</span>
                        </p>
                      ))}
                    </div>
                  </div>
                  <div class="bg-gray-50 rounded-xl p-4">
                    <h4 class="font-semibold text-gray-800 mb-2 flex items-center">
                      <span class="w-1 h-4 bg-purple-500 rounded-full mr-2"></span>
                      專業經歷
                    </h4>
                    <div class="text-gray-600 space-y-1 text-sm">
                      {member.experience.split('\n').filter(line => line.trim()).map(line => (
                        <p class="flex items-start">
                          <span class="mr-2">•</span>
                          <span>{line.trim()}</span>
                        </p>
                      ))}
                    </div>
                  </div>
                  <div class="bg-gray-50 rounded-xl p-4">
                    <h4 class="font-semibold text-gray-800 mb-2 flex items-center">
                      <span class="w-1 h-4 bg-pink-400 rounded-full mr-2"></span>
                      服務企業
                    </h4>
                    <div class="text-gray-600 space-y-1 text-sm">
                      {member.clients.split('\n').filter(line => line.trim()).map(line => (
                        <p class="flex items-start">
                          <span class="mr-2">•</span>
                          <span>{line.trim()}</span>
                        </p>
                      ))}
                    </div>
                  </div>
                  <div class="bg-gray-50 rounded-xl p-4">
                    <h4 class="font-semibold text-gray-800 mb-2 flex items-center">
                      <span class="w-1 h-4 bg-purple-400 rounded-full mr-2"></span>
                      授課經歷
                    </h4>
                    <div class="text-gray-600 space-y-1 text-sm">
                      {member.teaching.split('\n').filter(line => line.trim()).map(line => (
                        <p class="flex items-start">
                          <span class="mr-2">•</span>
                          <span>{line.trim()}</span>
                        </p>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
